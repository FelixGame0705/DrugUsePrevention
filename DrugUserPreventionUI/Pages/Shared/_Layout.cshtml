                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Courses">
                                    <i class="fas fa-graduation-cap me-1"></i>
                                    Khóa học
                                </a>
                            </li>
                        }

                        <!-- ✅ COMMON LINKS -->
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy">
                                <i class="fas fa-user-shield me-1"></i>
                                Quyền riêng tư
                            </a>
                        </li>
                    </ul>

                    <!-- ✅ USER AUTHENTICATION SECTION -->
                    <ul class="navbar-nav">
                        @if (isAuthenticated && currentUser != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle user-info" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle me-2"></i>
                                    <span class="d-none d-md-inline">@displayName</span>
                                    <span class="role-badge @userRole.ToLower() ms-2">@userRole</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <h6 class="dropdown-header">
                                            <i class="fas fa-user me-2"></i>
                                            @displayName
                                        </h6>
                                    </li>
                                    <li>
                                        <span class="dropdown-item-text small text-muted">
                                            @(currentUser?.Email ?? "")
                                        </span>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-page="/Profile">
                                            <i class="fas fa-user-edit me-2"></i>
                                            Hồ sơ cá nhân
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-page="/Settings">
                                            <i class="fas fa-cog me-2"></i>
                                            Cài đặt
                                        </a>
                                    </li>
