                                                <a class="dropdown-item" asp-area="" asp-page="/CourseDashboard">
                                                    <i class="fas fa-graduation-cap me-2"></i>
                                                    Quản lý Khóa học
                                                </a>
                                            </li>
                                        }
                                        @if (isStaff || isManager)
                                        {
                                            <li>
                                                <a class="dropdown-item" asp-area="" asp-page="/UserManagement">
                                                    <i class="fas fa-users me-2"></i>
                                                    Quản lý Người dùng
                                                </a>
                                            </li>
                                        }
                                        @if (isManager)
                                        {
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <a class="dropdown-item" asp-area="" asp-page="/Reports">
                                                    <i class="fas fa-chart-bar me-2"></i>
                                                    Báo cáo
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </li>
                            }

                            <!-- ✅ ADMIN NAVIGATION -->
