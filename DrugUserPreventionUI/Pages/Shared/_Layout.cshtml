                                </a>
                            </li>

                            @if (isMember || isStaff || isConsultant || isManager || isAdmin)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/MyCourses">
                                        <i class="fas fa-user-graduate me-1"></i>
